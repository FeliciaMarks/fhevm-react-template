{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal SDK for building confidential dApps with FHEVM - Complete template with examples",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:nextjs": "cd examples/nextjs && npm run dev",
    "dev:restaurant": "cd examples/restaurant-rating && npm run dev",
    "install:all": "npm install && npm install --workspaces",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "lint": "eslint packages/fhevm-sdk/src --ext .ts,.tsx",
    "clean": "rm -rf packages/fhevm-sdk/dist node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "zama",
    "sdk",
    "react",
    "nextjs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@fhevm/hardhat-plugin": "^0.1.0",
    "hardhat": "^2.19.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "ethers": "^6.9.0"
  }
}
